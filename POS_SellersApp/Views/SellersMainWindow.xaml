<Window x:Class="POS_SellersApp.Views.SellersMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS_SellersApp"
           xmlns:views = "clr-namespace:POS_SellersApp.Views" 
           xmlns:viewModels = "clr-namespace:POS_SellersApp.ViewModels" 
        mc:Ignorable="d"

        WindowStyle="None" Width="900" Background="#0085bd">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Constantia"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#e9e9e9"/>
            <Setter Property="MaxWidth" Value="170"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#e9e9e9"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontFamily" Value="Constantia"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Constantia"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Foreground" Value="#0472a1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,20,25,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="30" 
                                Background="#e9e9e9" 
                                BorderBrush="#047db1" 
                                BorderThickness="0,1,1,0">
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" Background="#0472a1" Height="40" Width="892" HorizontalAlignment="Stretch" MaxWidth="1200">
            <StatusBarItem HorizontalAlignment="Right" Margin="0,0,10,0">
                <TextBlock Text="Time date" TextWrapping="Wrap" Height="40" FontSize="17" Width="46" TextAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>


        <StackPanel DockPanel.Dock="Top" x:Name="spTitleBar" Height="50" Background="#0472a1" Orientation="Horizontal">
            <Image Height="51" Width="70" Source="/Logo_Small.png" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <Label Content="Welcome, user!" Width="636" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
            <Button Content="Sign Out" Width="154" Margin="15,5,5,5"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" x:Name="spLeftSide" Width="420" Background="#edeaea" >

        </StackPanel>
        <StackPanel DockPanel.Dock="Right" x:Name="spRightSide" Width="460" Background="#0085bd"></StackPanel>
        <StackPanel  x:Name="spMiddle" VerticalAlignment="Top"  Width="890" Orientation="Horizontal">
        </StackPanel>
    </DockPanel>

</Window>

