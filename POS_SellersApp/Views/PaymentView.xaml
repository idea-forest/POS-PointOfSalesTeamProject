    <DockPanel Background="#0472a1" >
        <StackPanel x:Name="spRightSide" Width="430" Background="#edeaea" Orientation="Horizontal" Margin="0,0,0,0">
            <Grid>
                <Label Content="Balance Due" HorizontalAlignment="Left" Margin="49,18,0,0" VerticalAlignment="Top" Width="146" />
                <Label Content="Amount tendered" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="156,18,0,0" VerticalAlignment="Top" Width="130" />
                <TextBlock Text="{Binding Balance, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="141" Background="White" Height="39"/>
                <Label Content="{Binding Amount}" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="156,44,0,0" VerticalAlignment="Top" Width="130" Background="White" Height="39"/>
                <Button Content="1" Command="{Binding AddAmount}" CommandParameter="1" Style="{StaticResource CalcButton}" HorizontalAlignment="Left" Margin="15,119,0,0" VerticalAlignment="Top" Width="76"/>
                <Button Content="2" Command="{Binding AddAmount}" CommandParameter="2" HorizontalAlignment="Left" Margin="109,119,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="3" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="3" Margin="194,119,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="4" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="4" Margin="15,197,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="5" HorizontalAlignment="Left" Command="{Binding AddAmount}"  CommandParameter="5" Margin="109,197,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="6" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="6" Margin="194,197,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="7" HorizontalAlignment="Left"  Command="{Binding AddAmount}" CommandParameter="7" Margin="16,275,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="8" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="8" Margin="109,275,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="9" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="9" Margin="194,275,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="C" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="c" Margin="16,356,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="0" HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="0" Margin="109,356,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}"/>
                <Button Content="." HorizontalAlignment="Left" Command="{Binding AddAmount}" CommandParameter="." Margin="194,356,0,0" VerticalAlignment="Top" Style="{StaticResource CalcButton}" Width="76"/>
                <Button Content="Cancel Paiement " Command="{Binding Done}" CommandParameter="Back" Style="{StaticResource RectBlueButton}" Margin="89,438,102,182" />


            </Grid>
            <Grid  Width="140">
                <Label Content="Change" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="26,14,0,0" RenderTransformOrigin="0.459,1.115" />
                <Label Content="{Binding Change}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Background="White" Margin="35,41,0,0" RenderTransformOrigin="0.432,0.462" Height="41"/>
                <Button Content="Cash" Command="{Binding PayCash}" Style="{StaticResource RectBlueButton}" Margin="14,138,31,472" />
                <Button Content="Credit" Style="{StaticResource RectBlueButton}" Margin="14,216,31,394" />
                <Button Content="Gift Card" Style="{StaticResource RectBlueButton}" Margin="14,299,31,311" />
                <Button Command="{Binding Done}" CommandParameter="Register" Style="{StaticResource RoundBlueButton}" Content="Done" FontSize="20" Margin="26,361,48,214" />
            </Grid>
            <Button x:Name="button" Content="Button" Width="75"/>
        </StackPanel>
        <!--<StackPanel  x:Name="spMiddle" VerticalAlignment="Top"  Width="890" Orientation="Horizontal">
        </StackPanel>-->
    </DockPanel>
